@model WukkaMan_Interface.Models.Employee

@{
    ViewData["Title"] = "EmployeeLogin";
}


<center>

    <h3>Employee Login </h3>

</center>

<hr />

<div class="container row-cols-md-3  d-flex justify-content-center align-items-center ">
    <form asp-action="EmployeeLogin" class="Razor-Form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        

        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
          
            <label>Id Code</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
       
        <div class="form-group">
            <label asp-for="WorkId" class="control-label"></label>
            <input asp-for="WorkId" class="form-control" />
            <span asp-validation-for="WorkId" class="text-danger"></span>
        </div>


        <div class="form-group row-cols-md-1">
            <input type="submit" value=" Login " class="btn btn-primary loginBtn" />
        </div>

    </form>


</div> <!------------>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

